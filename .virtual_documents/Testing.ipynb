def pairmsa(nuc1, nuc2):

    if nuc1 == nuc2:
        return(0)

    else:
        seq1 = record[nuc1.item()].seq
        seq2 = record[nuc2.item()].seq

        aligner = Align.PairwiseAligner()
        aligner.mode = 'global'

        alignment = aligner.align(seq1, seq2)[0]
        score = alignment.score/len(str(alignment).split('\n')[0])

        return(score)


